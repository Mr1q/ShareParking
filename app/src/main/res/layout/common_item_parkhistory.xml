<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="8dp"
    android:padding="20dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/itemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_CarNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="车牌号:闽A xxxx"/>
        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间：2016年12月22日" />

        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间：2016年12月22日" />
        <TextView
            android:id="@+id/tv_costtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总用时：1h" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="停车地址:桂林电子科技大学"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_price"
        android:layout_gravity="right|center"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:text="10元"
        android:textSize="30dp"/>
<!--    <LinearLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:gravity="right"-->
<!--        android:orientation="vertical">-->
<!--      -->
<!--        <TextView-->
<!--            android:id="@+id/itemRemain"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:text="当前剩余：10元"/>-->
<!--    </LinearLayout>-->
    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="2dp"
        android:background="@color/Background"/>

</android.support.v7.widget.CardView>
