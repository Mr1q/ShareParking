        <!--app:cpb_iconComplete="@mipmap/open"-->
        <!--app:cpb_iconError="@mipmap/close"-->
        <!--app:cpb_textIdle="Upload" />-->
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>