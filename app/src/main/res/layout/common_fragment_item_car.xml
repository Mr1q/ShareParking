<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    android:layout_margin="10dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ALL"
        android:layout_width="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/termial_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="快递箱"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/termial_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="快递箱状态"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/termial_ID"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/unbind"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/bt_gradient"
            android:text="解除绑定"
            android:textColor="@color/color_white"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/station_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@mipmap/lv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/switch_button"
            app:layout_constraintBottom_toBottomOf="@id/switch_button"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:text="开关:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/switch_share"
            app:layout_constraintBottom_toBottomOf="@id/switch_share"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:text="共享:"/>
        <com.suke.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <com.suke.widget.SwitchButton
            android:id="@+id/switch_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@id/switch_button"
            app:layout_constraintRight_toRightOf="parent" />
        <!--<com.dd.CircularProgressButton-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--android:id="@+id/circularButton1"-->
